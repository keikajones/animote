<% if @emotion.name %>
	<% videos = find_videos(@emotion.name) %> 
  <% video = videos[rand(0..videos.size-1)] %> 
  <% name = video.name %>
  <% file = video.file %>  
<% else %> 
	<!-- VIDEO NOT FOUND -->
<% end %>
  
<div class="space"> </div>

<div id="videoBox">
<h1> Video: <%= name %> </h1>
<iframe width="1280" height="720" src=http://<%= file %>?rel=0&autoplay=1 frameborder="0" allowfullscreen></iframe> <br/>
</div>
<button onclick='nextvid()'>Next</button>

<div class="footspace"> </div>

<script type="text/javascript"> 
	function nextvid(){ 
		location.reload();
	};	 
 
</script>